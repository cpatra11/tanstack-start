# Copy to .env.local and fill values before running db commands or starting the app
# MongoDB connection (required for Prisma)
DATABASE_URL="mongodb://localhost:27017/cozmic-ai"

# SMTP config for Nodemailer (provide real creds in production)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false # true for 465, false for other ports
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
SMTP_FROM="cozmic.ai <no-reply@cozmic.ai>"
