generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

/// Subscribers collected from the public landing page waitlist
model Subscriber {
  id                    String   @id @default(auto()) @map("_id") @db.ObjectId
  email                 String   @unique
  name                  String?
  source                String?  // optional (e.g. "landing-page")
  verified              Boolean  @default(false)
  verifyToken           String?  @db.String
  verifyTokenExpiresAt  DateTime?
  createdAt             DateTime @default(now())
} 
